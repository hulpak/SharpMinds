@model HRM.DAL.Models.UserRequest
@{
    ViewBag.Title = "Edit";
}


<div class="container" align="center">
    <h4>Edit UserRequest</h4>
    <div class="panel-footer " style="width: 250px; border:1px solid black; color:cornflowerblue">


        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <fieldset>
                <div class="form-horizontal">
                    

                    <div class="form-group">
                        @Html.LabelFor(i => i.UserId)
                        <div class="col-md-10">
                            @Html.EditorFor(i => i.UserId)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(i => i.RequestTypeId)
                        <div class="col-md-10">
                            @Html.EditorFor(i => i.RequestTypeId)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(i => i.StatusId)
                        <div class="col-md-10">
                            @Html.EditorFor(i => i.StatusId)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(i => i.StartDate)
                        <div class="col-md-10">
                            @Html.EditorFor(i => i.StartDate)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(i => i.EndDate)
                        <div class="col-md-10">
                            @Html.EditorFor(i => i.EndDate)
                        </div>
                    </div>

                </div>
                <p>
                    <input type="submit" value="Save"  class="btn btn-primary" />
                </p>
            </fieldset>
        }
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
      </div>
    </div>

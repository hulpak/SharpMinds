
@model HRM.DAL.Models.User
@{
    ViewBag.Title = "Edit";
}


<div class="container" align="center">
    <h4>Edit User</h4>
    <div class="panel-footer " style="width: 250px; border:1px solid black; color:cornflowerblue">


        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <fieldset>
                <div class="form-horizontal">
                   

                    <div class="form-group">
                        @Html.LabelFor(i => i.FullName)
                        <div class="col-md-10">
                            @Html.EditorFor(i => i.FullName)

                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(i => i.Email)
                        <div class="col-md-10">
                            @Html.EditorFor(i => i.Email)

                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(i => i.LevelId)
                        <div class="col-md-10">
                            @Html.EditorFor(i => i.LevelId)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(i => i.Password)
                        <div class="col-md-10">
                            @Html.EditorFor(i => i.Password)

                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(i => i.StartDate)
                        <div class="col-md-10">
                            @Html.EditorFor(i => i.StartDate)

                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(i => i.StatusId)
                        <div class="col-md-10">
                            @Html.EditorFor(i => i.StatusId)

                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(i => i.UserRole)
                        <div class="col-md-10">
                            @Html.EditorFor(i => i.UserRole)

                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(i => i.UserTeam)
                        <div class="col-md-10">
                            @Html.EditorFor(i => i.UserTeam)

                        </div>
                    </div>


                </div>
                <p>
                    <input type="submit" value="Save"  class="btn btn-primary" />
                </p>
            </fieldset>
        }
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>
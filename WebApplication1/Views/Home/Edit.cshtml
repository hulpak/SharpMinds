@model HRM.DAL.Models.User
@{
    ViewBag.Title = "Edit";
}

<div class="container" align="center">
    <div class="panel-footer " style="width: 250px; border:2px solid blue;">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal" >
                <h4>Edit User</h4>
                <div class="form-group" >
                    @Html.LabelFor(i => i.Id)
                    <div class="col-md-10">
                        @Html.EditorFor(i => i.Id)

                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(i => i.FullName)
                    <div class="col-md-10">
                        @Html.EditorFor(i => i.FullName)

                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(i => i.Password)
                    <div class="col-md-10">
                        @Html.EditorFor(i => i.Password)

                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(i => i.Email)
                    <div class="col-md-10">
                        @Html.EditorFor(i => i.Email)

                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(i => i.StatusId)
                    <div class="col-md-10">
                        @Html.EditorFor(i => i.StatusId)

                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(i => i.LevelId)
                    <div class="col-md-10">
                        @Html.EditorFor(i => i.LevelId)

                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(i => i.StartDate)
                    <div class="col-md-10">
                        @Html.EditorFor(i => i.StartDate)

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>

            </div>
            <div>
                @Html.ActionLink("Back to Users List", "List")
            </div>
        }
    </div>

</div>




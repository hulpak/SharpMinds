@model HRM.DAL.Models.Settings
@{
    ViewBag.Title = "Add";
}

<div class="container" align="center">
    <div class="panel-footer " style="width: 250px; border:1px solid black;">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Add Setting</h4>


                <div class="form-group">
                    @Html.LabelFor(i => i.SickDays)
                    <div class="col-md-10">
                        @Html.EditorFor(i => i.SickDays)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(i => i.VacationDays)
                    <div class="col-md-10">
                        @Html.EditorFor(i => i.VacationDays)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Add" class="btn btn-default" />
                    </div>
                </div>

            </div>

        }
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>

</div>

